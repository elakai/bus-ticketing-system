<div id="<%= dom_id trip %>">

<div class="trips-container">
<head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Castoro+Titling&family=Cinzel:wght@400..900&family=Graduate&family=Jacquard+12&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Sedan+SC&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Caveat+Brush&display=swap" rel="stylesheet">

  <style>


  .table2 {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }


    .body {
      color: white;
      text-align: center;
      padding: 20px;
      font-family: "Caveat Brush", cursive;
      font-size: 30px;
      border-bottom: 1px solid #dddddd;
    }

    .top {
      background: linear-gradient(to right, #5B1349, #FF6AD9, #131D5B);
      padding-top: 100px;
      font-family: "Caveat Brush", cursive;
      text-align: center;
    }


    .table2 tbody tr:nth-of-type(odd){
      background-color: white;
      color: black;
    }

  h1 {
    font-family: "Dancing Script", cursive;
    font-size: 70px;
    text-align: center;
    background: linear-gradient(to right, #FFE124, #FCCEA2,#D96D07);
    -webkit-text-fill-color: transparent;
    -webkit-background-clip: text;
  }

  .table2 tbody tr{
    background-color: white;
    color: black;
  }



  </style>
</head>

<h1>Trip Information</h1>

<table class="table2">
  <thead class="body">
  <tr class="top">
    <td><strong>Bus</strong></td>
    <td><strong>Schedule</strong></td>
    <td><strong>Origin</strong></td>
    <td><strong>Destination</strong></td>
    <td><strong>Number of Passengers</strong></td>
    <td><strong>Unit Fare</strong></td>
    <td><strong>Total Fare</strong></td>
    </tr>
  </thead>

  <tbody>
    <tr class="body">
      <td><%=trip.bus_id%></td>
      <td><%=trip.schedule%></td>
      <td><%=trip.origin%></td>
      <td><%=trip.destination%></td> 
      <td><%=trip.number_of_passengers%></td>
      <td><%=trip.unit_fare%></td>
      <td><%=trip.total_fare%></td>
    </tr>

    </tbody>

  </table>


</div>
