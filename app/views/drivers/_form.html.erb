<%= form_with(model: driver) do |form| %>
  <head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
  
  <style>

  .aesthetic {
    color: white;
    padding: 2px;
    font-family: "Bebas Neue", sans-serif;
    font-size: 28px;
  }

  </style>
  </head>


  <% if driver.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(driver.errors.count, "error") %> prohibited this driver from being saved:</h2>

      <ul>
        <% driver.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="aesthetic">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="aesthetic">
    <%= form.label :contact_number, style: "display: block" %>
    <%= form.text_field :contact_number %>
  </div>

  <div class="field">
  <div class="aesthetic">
  <%= form.label :bus_id %>
  <%= collection_select(:driver,:bus_id,Bus.all,:id,:plate_number) %>
</div> 
</div>

<div class="aesthetic">
<%= form.label :image, style: "display: block" %>
<%= form.file_field :image %>
</div>



  <div>
    <%= form.submit %>
  </div>
<% end %>
