<p style="color: green"><%= notice %></p>

<h1>Drivers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact Number</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= link_to driver.name, driver %></td>
        <td><%= driver.contact_number %></td>
        <td><%= image_tag driver.image %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New driver", new_driver_path %>