<p style="color: green"><%= notice %></p>

<div class="bus-container">

<div class="bus_header">
  <%= image_tag("haikyuuuheader.png") %>
</div>



<head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Castoro+Titling&family=Graduate&family=Jacquard+12&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Sedan+SC&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Abel&family=Bad+Script&family=Castoro+Titling&family=Cinzel:wght@400..900&family=Graduate&family=Jacquard+12&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Sedan+SC&display=swap" rel="stylesheet">

  <style>


    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }


    table thead th {
      color: white;
      text-align: center;
      padding: 20px;
      font-family: "Bebas Neue", sans-serif;
      font-size: 30px;
      border-bottom: 1px solid #dddddd;
    }

    table thead tr {
      background: linear-gradient(to right, #000000, #FF8700);
    }

    tbody td {
      border-bottom: 3px solid #6C3D08;
      padding: 10px;
      font-family: "Bebas Neue", sans-serif;
      font-size: 40px;
      text-align: center;
    }

    .heading {
      font-family: "Graduate", serif;
      font-size: 80px;
      text-align: center;
      background: linear-gradient(to right, #FFE124, #FCCEA2,#D96D07);
      -webkit-text-fill-color: transparent;
      -webkit-background-clip: text;
    }

    table tbody tr:nth-of-type(even){
      background-color: #A4A4A4;
      color: white;
    }

    table tbody tr:nth-of-type(odd){
      background-color: #FFFFFF;
    }


    .button {
      background-color: #0F51B1;
      font-family: "Graduate", serif;
      border: none;
      color: white;
      padding: 20px 20px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 30px;
      margin: 4px 2px;
      transition-duration: 0.1s;
      cursor: pointer;
      border-radius: 12px;
      left: 45% ;
      position: relative;
    }

    .pic {
      max-width: 50% ;
      max-height: 75% ;
    }

    .button:hover {
      transform: scale(1.03); 
      background-color: #B0D1FF;
      color: black;
    }
  
  </style>
</head>

<h1 class="heading"> HAIKYUU BUSES ASSOCIATION </h1>


<table>
  <thead>
    <tr>
      <th>Body Number</th>
      <th>Plate Number</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    <% @buses.each do |bus| %>
      <tr>
        <td><%= link_to bus.body_number, bus %></td>
        <td><%= bus.plate_number %></td>
        <td class="pic" ><%= image_tag bus.image %></td>

      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "NEW BUS", new_bus_path, class: "button" %>
