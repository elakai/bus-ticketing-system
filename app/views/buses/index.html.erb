<p style="color: green"><%= notice %></p>

<h1>Buses</h1>

<table>
  <thead>
    <tr>
      <th>Body Number</th>
      <th>Plate Number</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    <% @buses.each do |bus| %>
      <tr>
        <td><%= link_to bus.body_number, bus %></td>
        <td><%= bus.plate_number %></td>
        <td><%= image_tag bus.image %></td>

      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "New bus", new_bus_path %>
